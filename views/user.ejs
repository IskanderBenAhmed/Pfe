        <div class="row">
          <div class="container">
            <div class="centered">
              <h2 style="color: #ffffff;" class="bigger-label animation-fade-in">Users table</h2>
            </div>
          </div>
          <div class="col-12">
            <div class="card mb-4">
              <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                  <table class="table animated-table">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxl font-weight-bolder opacity-12">Username</th>
                        <th class="text-uppercase text-secondary text-xxl font-weight-bolder opacity-12">Email</th>
                        <th class="text-uppercase text-secondary text-xxl font-weight-bolder opacity-7 text-left">Role</th>
                        <th class="text-secondary opacity-7"></th>
                      </tr>
                    </thead>
                    <tbody id="user-table-body"></tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        (function() {
          const userTableBody = document.getElementById('user-table-body');
          const getUsers = async () => {
            const res = await fetch('/api/auth/getUsers');
            const data = await res.json();
            data.user.forEach((mappedUser) => {
  if (mappedUser.email !== 'admin') {
    const row = userTableBody.insertRow();
    const usernameCell = row.insertCell();
    usernameCell.innerHTML = `
      <div class="table-cell px-2 py-1">
        <div class="d-flex flex-column justify-content-center">
          <h6 class="mb-0 text-sm">${mappedUser.username}</h6>
        </div>
      </div>
    `;
    const emailCell = row.insertCell();
    emailCell.innerHTML = `
      <div class="table-cell px-2 py-1">
        <div class="d-flex flex-column justify-content-center">
          <h6 class="mb-0 text-sm">${mappedUser.email}</h6>
        </div>
      </div>
    `;
    const roleCell = row.insertCell();
    roleCell.className = "text-center";
    roleCell.innerHTML = `
      <div class="table-cell px-2 py-1">
        <div class="d-flex flex-column justify-content-center">
          <h6 class="mb-0 text-sm">${mappedUser.role}</h6>
        </div>
      </div>
    `;

   
  }
});

          };
          getUsers();
        })();
       
      </script>
