<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    .table-cell {
      display: flex;
      align-items: center;
    }

    .animation-fade-in {
      animation: fade-in 1s ease-in-out forwards;
      opacity: 0;
    }

    @keyframes fade-in {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 10vh;
    }

    .centered {
      text-align: center;
    }

    .animated-table {
      width: 100%;
      border-collapse: collapse;
    }

    .animated-table thead th {
      font-weight: bold;
      border-bottom: 2px solid #ccc;
      padding: 10px;
      text-align: left;
    }

    .animated-table tbody tr {
      opacity: 0;
      animation: tableFadeIn 1s forwards;
    }

    @keyframes tableFadeIn {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animated-table tbody td {
      padding: 10px;
      border-bottom: 1px solid #ccc;
    }

    .animated-table tbody td:last-child {
      text-align: right;
    }

    .animated-table tbody tr:last-child td {
      border-bottom: none;
    }

    .animated-table tbody tr:hover {
      background-color: #f2f2f2;
    }
    .sidenav-main {
  width: 25%; /* Adjust the width as per your preference */
}
.text-xxl {
  font-size: 17px; /* Adjust the font size as needed */
