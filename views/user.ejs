<script>
  (function() {
    const userTableBody = document.getElementById('user-table-body');

    const getUsers = async () => {
      const res = await fetch('/api/auth/getUsers');
      const data = await res.json();

      data.user.forEach((mappedUser) => {
        if (mappedUser.email !== 'admin') {
          const row = userTableBody.insertRow();

          const usernameCell = row.insertCell();
          usernameCell.innerHTML = `
            <div class="table-cell px-2 py-1">
              <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">${mappedUser.username}</h6>
              </div>
            </div>
          `;

          const emailCell = row.insertCell();
          emailCell.innerHTML = `
            <div class="table-cell px-2 py-1">
              <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">${mappedUser.email}</h6>
              </div>
            </div>
          `;

          const roleCell = row.insertCell();
          roleCell.className = "text-center";
          roleCell.innerHTML = `
            <div class="table-cell px-2 py-1">
              <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">${mappedUser.role}</h6>
              </div>
            </div>
          `;

          const editCell = row.insertCell();
editCell.innerHTML = `
  <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;" onclick="handleEdit('${mappedUser.username}')">
    <i class="fas fa-pencil-alt text-dark me-2" data-original-title="Edit user" aria-hidden="true"></i>Edit
  </a>
`;
        }
      });
    };
    const handleEdit = (username) => {
  window.location.href = `/projects?username=${username}`;
};

  

    getUsers();
  })();
