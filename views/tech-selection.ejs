            <div class="card-body custom-form-width">

              
              <form id="techProjectForm" action="/payment" method="POST">
                <div class="form-group">

                  <label   for="backend" style="font-size: 20px;">Backend:</label>
                  <input type="text" class="form-control project-tech-input" name="backend" id="backend" required>
                </div>


                <div class="form-group">
                  <label for="frontend" style="font-size: 20px;">Frontend:</label>
                  <input type="text" class="form-control project-tech-input" name="frontend" id="frontend" required>
                </div>
                <div class="form-group">
                  <label for="database" style="font-size: 20px;">Database:</label>
                  <input type="text" class="form-control project-tech-input" name="database" id="database" required>
                </div>
                <!-- Add hidden input fields for category and projectType -->
                <input type="hidden" name="backend" value="<%= backend %>">
                <input type="hidden" name="frontend" value="<%= frontend %>">
                <input type="hidden" name="database" value="<%= database %>">
                <input type="hidden" name="category" value="<%= category %>">
                <input type="hidden" name="projectName" value="<%= projectName %>">

                <input type="hidden" name="projectType" value="<%= projectType %>">



               
                <div class="text-center" style="margin-top: 80px;">
                  <button id="cancelButtonTech" type="button" class="btn btn-white-text mx-2 float-right">Go Back</button>
                  <button id="resetButton" type="button" class="btn btn-white-text mx-2 float-right">Reset</button>
                  <button href="/payment" type="submit" class="btn btn-white-text mx-2 float-right">NEXT</button>
                </div>
              
              </form> 
              
              <script>
                 


                // Reset the form to its initial state
                const resetButton = document.getElementById('resetButton');
                resetButton.addEventListener('click', function() {
                  const form = document.getElementById('techProjectForm');
                  form.reset(); 
                });
              
                function displayNotification(event) {
                  event.preventDefault(); // Prevent the form submission
              
                  // Get the project details
                  const backend = document.getElementById('backend').value;
                  const frontend = document.getElementById('frontend').value;
                  const database = document.getElementById('database').value;
              
                  // Submit the form
                  const techProjectForm = document.getElementById('techProjectForm');
                  techProjectForm.submit();
                }
              
                // Bind event listener to the "Next" button's click event
                const createProjectButtonTech = document.querySelector('#techProjectForm button[type="submit"]');
                createProjectButtonTech.addEventListener('click', displayNotification);
              
                // Bind event listener to the "Go Back" button's click event
                const cancelButtonTech = document.getElementById('cancelButtonTech');
                cancelButtonTech.addEventListener('click', goBack);
              
                function goBack() {
                  history.back(); // Go back to the previous page
                }


              
              </script>
              
              
              
