<script>
  const animatedText = document.getElementById('animated-text');

  // Set the data-text attribute to the text content
  animatedText.setAttribute('data-text', animatedText.textContent);

  const form = document.querySelector('form');
  const username = document.querySelector('#username');
  const email = document.querySelector('#email');
  const password = document.querySelector('#password');
  const role = document.querySelector('#role');
  const display = document.querySelector('.error');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    display.textContent = '';
    try {
      const res = await fetch('/api/auth/register', {
        method: 'POST',
        body: JSON.stringify({ username: username.value, email: email.value, password: password.value, role: role.value }),
        headers: { 'Content-Type': 'application/json' }
      });
      const data = await res.json();
      if (res.status === 400 || res.status === 401) {
        // Display SweetAlert2 popup for email or username already registered
        Swal.fire({
          icon: 'error',
          title: 'Registration Failed',
          text: `${data.message}`,
        });
        return;
      }
      // Registration successful, redirect based on role
      data.role === 'admin' ? location.assign('/admin') : location.assign('/');
    } catch (err) {
      console.log(err.message);
    }
  });
</script>

              
