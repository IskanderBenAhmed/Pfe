              <script>
                function updatePrice() {
                  // Get the project details and calculate the total price
                  const projectContactForm = document.getElementById('projectContactForm').checked;
                  const projectGallery = document.getElementById('projectGallery').checked;
                  const projectBlog = document.getElementById('projectBlog').checked;
              
                  let totalPrice = 0;
                  if (projectContactForm) {
                    totalPrice += 100;
                  }
                  if (projectGallery) {
                    totalPrice += 120;
                  }
                  if (projectBlog) {
                    totalPrice += 50;
                  }
              
                  // Update the price label
                  const priceLabel = document.getElementById('priceLabel');
                  priceLabel.textContent = `Prix : $${totalPrice}`;
                }
              
                function displayNotification() {
                  // Get the project details
                  const projectName = document.getElementById('projectName').value;
                  const projectDescription = document.getElementById('projectDescription').value;
                  const projectContactForm = document.getElementById('projectContactForm').checked;
                  const projectGallery = document.getElementById('projectGallery').checked;
                  const projectBlog = document.getElementById('projectBlog').checked;
              
                  // Calculate the total price
                  let totalPrice = 0;
                  if (projectContactForm) {
                    totalPrice += 100;
                  }
                  if (projectGallery) {
                    totalPrice += 120;
                  }
                  if (projectBlog) {
                    totalPrice += 50;
                  }
              
                  // Update the price label
                  const priceLabel = document.getElementById('priceLabel');
                  priceLabel.textContent = `Prix : $${totalPrice}`;
              
                  // Display the confirmation dialog as a notification
                  const proceed = window.confirm(`The total price of your project is: ${totalPrice}$. Proceed with saving the project?`);
                  if (proceed) {
                    // Submit the form
                    const createProjectForm = document.getElementById('createProjectForm');
                    createProjectForm.submit();
                  }  else {
    // User clicked "Cancel" - perform any necessary actions or show a message to the user
    console.log("Saving project canceled.");
    
    // Reset the form fields
    document.getElementById('projectName').value = '';
    document.getElementById('projectDescription').value = '';
    document.getElementById('projectContactForm').checked = false;
    document.getElementById('projectGallery').checked = false;
    document.getElementById('projectBlog').checked = false;

    // Reset the price label
    priceLabel.textContent = 'Prix : $0';
  }
                }
              
                // Bind event listener to the "Créer le projet" button's click event
                const createProjectButton = document.querySelector('input[type="submit"]');
                createProjectButton.addEventListener('click', displayNotification);
              
                // Bind event listener to the "Annuler" button's click event
                const cancelButton = document.getElementById('cancelButton');
                cancelButton.addEventListener('click', () => {
                  // Reset the form fields
                  document.getElementById('projectName').value = '';
                  document.getElementById('projectDescription').value = '';
                  document.getElementById('projectContactForm').checked = false;
                  document.getElementById('projectGallery').checked = false;
                  document.getElementById('projectBlog').checked = false;
              
                  // Reset the price label
                  const priceLabel = document.getElementById('priceLabel');
                  priceLabel.textContent = 'Prix : $0';
              
                  console.log("Saving project canceled.");
                });
              
                // Bind event listeners to the checkboxes for updating the price
                const checkboxes = document.querySelectorAll('input[type="checkbox"]');
                checkboxes.forEach((checkbox) => {
                  checkbox.addEventListener('change', updatePrice);
                });
              </script>
              
