            <div class="card-body custom-form-width">
              <form id="createProjectForm" action="/saved-project" method="POST">
                <div style="text-align: center;">
                  <h4>Informations générales</h4>
                </div>
                <!-- ... existing fields ... -->
                <div class="col-md-6" style="margin-top: 20px;">
                  <label for="projectName" class="project-name-input">Nom du projet :</label>
                  <input type="text" class="form-control project-name-input" name="projectName" id="projectName" required>
                </div>
                <div class="col-md-4">
                  <label for="projectDescription" class="project-name-input">Description du projet :</label>
                  <textarea name="projectDescription" class="form-control" id="projectDescription" required style="width: 400px;"></textarea>
                </div>
                <div style="margin-top: 45px;">
                  <div style="text-align: center;">
                    <h4>Fonctionnalités</h4>
                  </div>
                  <label style="margin-top: 20px; margin-left: 50px;" for="projectContactForm" class="form-check">
                    <input class="form-check-input" type="checkbox" name="projectContactForm" id="projectContactForm" data-price="100">
                    <span style="font-size: 15px; margin-top: 5px;">Chat</span>
                  </label>
                  <label style="margin-top: 20px;" for="projectGallery" class="form-check">
                    <input class="form-check-input" type="checkbox" name="projectGallery" id="projectGallery" data-price="120">
                    <span style="font-size: 15px; margin-top: 5px;">Galerie Photos et Vidéos</span>
                  </label>
                  <label style="margin-top: 20px;" for="projectBlog" class="form-check">
                    <input class="form-check-input" type="checkbox" name="projectBlog" id="projectBlog" data-price="50">
                    <span style="font-size: 15px; margin-top: 5px;">Catalogue Produits</span>
                  </label>
                </div>
                <div style="text-align: center; margin-top: 20px;">
                  <h4>Prix</h4>
                  <p id="priceLabel">Prix : $0</p>
                </div>
                <!-- ... existing fields ... -->
                <div class="button-container">
                  <input type="submit" class="btn bg-gradient-dark w-30 my-4 mb-2" value="Créer le projet">
                </div>
                <div>
                  <button id="cancelButton" type="button" class="btn btn-white-text mx-2 float-right">Go Back</button>
                  <a href="/attached-file" type="button" class="btn btn-white-text mx-2 float-right">Next</a>
                </div>
              </form>
              
              <script>
                function updatePrice() {
                  // Get the project details and calculate the total price
                  const projectContactForm = document.getElementById('projectContactForm').checked;
                  const projectGallery = document.getElementById('projectGallery').checked;
                  const projectBlog = document.getElementById('projectBlog').checked;
              
                  let totalPrice = 0;
                  if (projectContactForm) {
                    totalPrice += 100;
                  }
                  if (projectGallery) {
                    totalPrice += 120;
                  }
                  if (projectBlog) {
                    totalPrice += 50;
                  }
              
                  // Update the price label
                  const priceLabel = document.getElementById('priceLabel');
                  priceLabel.textContent = `Prix : $${totalPrice}`;
                }
              
                // Attach event listeners to the checkboxes
                const checkboxes = document.querySelectorAll('input[type="checkbox"]');
                checkboxes.forEach(checkbox => {
                  checkbox.addEventListener('change', updatePrice);
                });
              </script>
              
