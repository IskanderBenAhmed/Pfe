            <script>
           window.addEventListener('DOMContentLoaded', () => {
    const notification = document.getElementById('notification');
    const notificationMessage = document.getElementById('notification-message');
    const notificationClose = document.getElementById('notification-close');

    // Show the notification with the provided message
    function showNotification(message) {
      notificationMessage.textContent = message;
      notification.classList.add('show');

      // Hide the notification after 5 seconds
      setTimeout(hideNotification, 5000);
    }

    // Hide the notification
    function hideNotification() {
      notification.classList.remove('show');
    }

    // Add an event listener to the close button
    notificationClose.addEventListener('click', hideNotification);

    // Trigger the notification with the success message
    showNotification('Project created successfully');
  });
              // Add an event listener to the "Save" button
              const saveButton = document.getElementById('saveButton');
              saveButton.addEventListener('click', saveAttachment);
              const cancelButton = document.getElementById('cancelButton');
              cancelButton.addEventListener('click', goBack);
            
              // Function to handle the "Save" button click event
              function saveAttachment() {
                const fileInput = document.getElementById('attachment');
                const file = fileInput.files[0];            
                if (file) {
                  const formData = new FormData();
                  formData.append('file', file);
                  
                  // Get the username of the logged-in user
                  const username = "<%= currentUser.username %>"; // Assuming the username is available in the "currentUser" variable passed to the template
                  
                  // Append the username to the form data
                  formData.append('username', username);
            
                  // Send a POST request to the server to save the file
                  fetch('/upload', {
                    method: 'POST',
                    body: formData,
                  })
                    .then(response => response.json())
                    .then(data => {
                      alert(data.message); // Display a success message
                    })
                    .catch(error => {
                      console.error(error);
                      alert('An error occurred while saving the file.'); // Display an error message
                    });
                } else {
                  alert('No file selected.'); // Display a message if no file is selected
                }
              }
              function goBack() {
                history.back(); // Go back to the previous page
              }
              
